<Window x:Class="GRANTApplication.OutputDesigner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GRANTApplication"
        mc:Ignorable="d"
        Title="OutputDesigner" 
              WindowStartupLocation="Manual" Left="850" Top="150" MaxHeight="850" Width="Auto" MaxWidth="750" Height="850" Background="GhostWhite">
    <DockPanel LastChildFill="True" Height="815" Width="Auto" MaxWidth="750" VerticalAlignment="Top" Background="GhostWhite" >
        <StackPanel Background="GhostWhite" DockPanel.Dock="Top"  Height="Auto" Margin="-4,0,4,0" >
            <StackPanel VerticalAlignment="Top">
                <Menu Width="Auto" Height="20" Margin="0,0,-10,0" >
                    <MenuItem Header="_File">
                        <MenuItem x:Name="AppExit" Header="E_xit" HorizontalAlignment="Left" Width="140"/>
                        <!-- Click="AppExit_Click"-->
                    </MenuItem>
                    <MenuItem Header="_Tools">
                        <MenuItem x:Name="Options" Header="_Options" HorizontalAlignment="Left" Width="140"/>
                    </MenuItem>
                    <MenuItem Header="_Help">
                        <MenuItem x:Name="About" Header="&amp;About" HorizontalAlignment="Left" Width="140"/>
                        <Separator />
                        <MenuItem x:Name="Autor" Header="&amp;Autor" HorizontalAlignment="Left" Width="140"/>
                    </MenuItem>

                </Menu>
                <StackPanel Orientation="Horizontal"  Background="Gray" Margin="0,0,-11,0">
                    <Label  Margin="5,5,5,5" Foreground="White" VerticalAlignment="Top" Content="New Project: "/>
                  
                    <Button Content="1. Load Filtered Tree" Click="LoadTree_Click" x:Name="LoadTree"    HorizontalAlignment="Center" VerticalAlignment="Center" Width="140" Margin="5,5,5,5"/>
                   <!-- <Button Content="2. Choose Output Device" Click="LoadDevice_Click"  x:Name="LoadDevice"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="140" Margin="5,5,5,5"/>-->
                    <Label  Margin="30,5,5,5" Foreground="White" VerticalAlignment="Top" Content="Choosen Output Device: "/>
                    <Grid>
                        <ComboBox Name="comboBox2" ItemsSource="{Binding Combobox2items}"  VerticalAlignment="Center" HorizontalAlignment="Center"   Width="320" Loaded="ComboBox_Loaded" SelectionChanged="ComboBox_SelectionChanged"/>
                    </Grid>
                </StackPanel>
                <StackPanel Orientation="Horizontal"  Background="Coral" Margin="0,0,-12,0">
                    <Label  Margin="5,5,5,5" Foreground="Black" VerticalAlignment="Top" Content="Laod existing Project: "/>
                    <Button Content="Load Project" Click="LoadProject_Click" x:Name="LoadProject"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="100"/>
               
                </StackPanel>
            </StackPanel>
        </StackPanel>
       
        <StackPanel  DockPanel.Dock="Bottom" Orientation="Horizontal" VerticalAlignment="Top" Background="Gold" Height="300" Margin="0,0,0,10">
            <Label VerticalAlignment="Center" Content="Filter marked tree node with choosen Filterstrategy: "/>
           

        </StackPanel>
        <StackPanel  DockPanel.Dock="Bottom" Orientation="Horizontal" VerticalAlignment="Top" Background="Coral" Height="40" Margin="0,0,0,25">
            <Label VerticalAlignment="Center" Content="Save Filtered Tree + Output Device + GUI-Elements: "/>
            <Button Content="Save Project" HorizontalAlignment="Left" Height="22" VerticalAlignment="Center" Width="140" Click="SaveProject_Click" x:Name="SaveButton" IsEnabled="{Binding SEnabled}"/>
        </StackPanel>
        <Grid DockPanel.Dock="Left" Height="335" VerticalAlignment="Top" Margin="5,5,5,5">
            <!-- Left-->
            <ScrollViewer  BorderBrush="AliceBlue" BorderThickness="1" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden" Background="GhostWhite" HorizontalAlignment="Left" Width="240" Margin="0,7" >
                <StackPanel Background="GhostWhite"  Width="235" VerticalAlignment="Top" Height="325">
                    <Label BorderThickness="1" BorderBrush="Gray" Background="Gold" FontSize="14" FontWeight="Bold" Content="Filtered Tree" HorizontalAlignment="Center" Width="235"/>
                    <TreeView BorderThickness="1" BorderBrush="Gray" Background="White" x:Name="tvMain" Width="235"  Height="290" >

                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate DataType="{x:Type MenuItem}" ItemsSource="{Binding Items}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding controlTypeFiltered}" />
                                    <TextBlock><Run Text="-"/></TextBlock>
                                    <!-- <TextBlock Visibility="Collapsed" Text="{Binding IdGenerated}"/>-->
                                    <!-- <TextBlock><Run Text="-"/></TextBlock>-->
                                    <!--<TextBlock  Text="{Binding IdGenerated}"/>-->
                                    <!--<TextBlock><Run Text="-"/></TextBlock>-->
                                    <TextBlock Text="{Binding nameFiltered}" />
                                </StackPanel>
                            </HierarchicalDataTemplate>

                        </TreeView.ItemTemplate>

                    </TreeView>
                    <!--<Grid Margin="10" MinWidth="350" MinHeight="700">-->
                    <!--</Grid>-->

                </StackPanel>
            </ScrollViewer>

            <ScrollViewer Background="GhostWhite" HorizontalAlignment="Center"  BorderBrush="AliceBlue" BorderThickness="1" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden" Width="240"  Height="330" Margin="0,0,7,0" >
                <StackPanel Grid.Row="2" DataContext="{Binding MyGroups}" Background="White" Width="230"   Height="320" HorizontalAlignment="Center">
                    <Label BorderThickness="1" BorderBrush="Gray" Background="Gold" FontSize="14" FontWeight="Bold" Content="GUI-Elements" HorizontalAlignment="Center"  Width="230" />
                    <ListBox Margin="10,10,0,13" Name="listBox1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="194" Height="200" />
                </StackPanel>
                    <!--   <StackPanel Background="White" Width="230"   Height="320" HorizontalAlignment="Center">
                    <Label BorderThickness="1" BorderBrush="Gray" Background="Gold" FontSize="14" FontWeight="Bold" Content="GUI-Elements" HorizontalAlignment="Center"  Width="230" />
                    <ListBox Name="listBoxForSelection" ItemsSource="{Binding}"  IsSynchronizedWithCurrentItem="True" SelectionMode="Single"  >

                        SelectionChanged="listBoxForSelection_SelectionChanged"  
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <RadioButton IsChecked="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBoxItem}},Path=IsSelected}">
                                    <RadioButton.Content>
                                        <TextBlock Text="{Binding}" Margin="5">
                                        </TextBlock>
                                    </RadioButton.Content>
                                </RadioButton>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>-->
            </ScrollViewer>

            <ScrollViewer Background="GhostWhite" HorizontalAlignment="Right"  BorderBrush="AliceBlue" BorderThickness="1" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden" Width="240"  Height="330"  Margin="0,0,8,0"  >

                <StackPanel Background="White" Width="230"   Height="320" HorizontalAlignment="Center">
                    <Label BorderThickness="1" BorderBrush="Gray" Background="Gold" FontSize="14" FontWeight="Bold" Content="Events"  HorizontalAlignment="Center" Width="230"/>


                </StackPanel>
            </ScrollViewer>
          

        </Grid>
      
      
  
    </DockPanel>
</Window>
