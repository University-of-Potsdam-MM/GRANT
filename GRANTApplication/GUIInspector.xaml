<Window x:Class="GRANTApplication.GUIInspector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="GUIInspector" Height="600" Width="600"
        xmlns:src="GRANTApplication.GUIInspector"
        KeyDown="Window_KeyDown"
         WindowStartupLocation="CenterOwner">
        <!--xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:src="clr-namespace:GRANTApplication.GUIInspector"
        mc:Ignorable="d"-->
    <DockPanel LastChildFill="True">
       <!-- Status Bar-->
        <StackPanel Margin="10">
       <!--     <Label FontWeight="Bold">Activate Filtering</Label>
            <RadioButton Checked="RadioButton_Checked">Yes</RadioButton>
            <RadioButton Checked="RadioButton_Checked_1">No</RadioButton>
        --></StackPanel>
        <StackPanel Background="Red" DockPanel.Dock="Top" Margin="0,4,4,4" MinHeight="100" MinWidth="600">
            <TextBlock Height="30" Foreground="White">Status Bar</TextBlock>
        </StackPanel>
        <StackPanel Background="Blue" DockPanel.Dock="Bottom" Margin="4" MinHeight="50"  MinWidth="600">
            <TextBlock Height="30" Foreground="White">Status Bar</TextBlock>
        </StackPanel>
        <!-- Left-->
        <StackPanel Background="Yellow" DockPanel.Dock="Left" Margin="4" MinWidth="400">
            <TextBlock Height="30" Foreground="White">Status Bar</TextBlock>
          
            <Grid Margin="10" >
                <TreeView Name="tvMain" Margin="0,0,0,-254">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate DataType="{x:Type MenuItem}" ItemsSource="{Binding Items}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding controlTypeFiltered}" />
                                <TextBlock> -</TextBlock>
                                <TextBlock Visibility="Collapsed" Text="{Binding IdGenerated}" />
                                <TextBlock> -</TextBlock>
                                <TextBlock Text="{Binding nameFiltered}" />
                                <TextBlock> -</TextBlock>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                      
                    </TreeView.ItemTemplate>

                </TreeView>
            

            <!-- 
                <TreeView ItemsSource="{Binding DeviceGroups}">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding DeviceTypes}">
                            <HierarchicalDataTemplate.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding DeviceInstances}">
                                    <TextBlock Text="{Binding Name}"/>
                                </HierarchicalDataTemplate>
                            </HierarchicalDataTemplate.ItemTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>-->

            </Grid>

        </StackPanel>
        
        

        <StackPanel Background="Green" DockPanel.Dock="Right" Margin="4" MinWidth="200" Orientation="Horizontal">
            <TextBlock Height="30" Foreground="White">Status Bar</TextBlock>
        </StackPanel>
        

    </DockPanel>
    
</Window>
