<Window x:Class="GRANTApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        KeyDown="Window_KeyDown"        
        WindowStartupLocation="Manual" Left="20" Top="30" Width="1600" Height="1000" >
    <Grid Background="GhostWhite">
        <Label FontWeight="Bold">Open Filtering Window</Label>
               
        <Grid>
            <Button Content="Open filter window" HorizontalAlignment="Left" Margin="50" VerticalAlignment="Top"
                 Click="button_FilterClick" />
        </Grid>
        <Grid>
            <Button Name="button1" Content="Open output Window (active)"  HorizontalAlignment="Right" Margin="50" VerticalAlignment="Top"
                 Click="button_OutputDesignerClick" />
        </Grid>
       
    </Grid>
</Window>
